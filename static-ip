#! /bin/sh

if [ $1 = '' ]
then
    sudo ifconfig eth0 192.168.1.2 netmask 255.255.255.0
    sudo route add -net 192.168.1.0 netmask 255.255.255.0 gw 192.168.1.1 eth0
    sudo route add default gw 192.168.1.1 eth0
else
    sudo ifconfig eth0 192.168.$1.2 netmask 255.255.255.0
    sudo route add -net 192.168.$1.0 netmask 255.255.255.0 gw 192.168.$1.1 eth0
    sudo route add default gw 192.168.$1.1 eth0
fi
